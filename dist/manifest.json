{
  "manifest_version": 3,
  "name": "Bluesky Hide Reposts",
  "version": "0.1",
  "description": "Customize hiding reposts in your Bluesky feeds",
  "content_scripts": [
    {
      "js": ["preload.js"],
      "matches": [
        "*://bsky.app/*"
      ]
    }
  ],
  "web_accessible_resources": [{
     "matches": ["*://bsky.app/*"],
     "resources": ["scripts/*.js"]
   }]
}
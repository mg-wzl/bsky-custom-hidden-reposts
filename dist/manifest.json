{
  "manifest_version": 3,
  "name": "Bluesky Hide Reposts",
  "version": "0.1",
  "description": "Customize hiding reposts in your Bluesky feeds",
  "host_permissions": [
    "*://bsky.app/*"
  ],
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "js": ["preload.js"],
      "matches": [
        "*://bsky.app/*"
      ]
    }
  ],
  "action": {
    "default_popup": "html/popup.html"
  },
  "web_accessible_resources": [{
     "matches": ["*://bsky.app/*"],
     "resources": ["scripts/*.js"]
   }]
}